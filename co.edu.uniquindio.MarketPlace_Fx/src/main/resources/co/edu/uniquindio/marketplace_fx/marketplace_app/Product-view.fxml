<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane stylesheets="@Css/DatePicker.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.marketplace_fx.marketplace_app.viewcontroller.ProductViewController">
    <SplitPane dividerPositions="0.5" orientation="VERTICAL" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <items>
            <!-- Panel Superior -->
            <AnchorPane style="-fx-background-color: d76ae8;">
                <VBox spacing="10" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
                      AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0">

                    <!-- Cabecera -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <ImageView fitHeight="47.0" fitWidth="50.0">
                            <Image url="@images/Men/DunimaSinFondo.png" />
                        </ImageView>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Products">
                            <font>
                                <Font name="Bilya Layered Base" size="36.0" />
                            </font>
                        </Text>
                    </HBox>

                    <Separator />

                    <!-- Formulario -->
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints minWidth="100" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" />
                            <ColumnConstraints minWidth="100" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" />
                        </columnConstraints>

                        <!-- Primera fila -->
                        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <font>
                                <Font name="Arial Black" size="16.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtName" promptText="Name" style="-fx-background-radius: 50;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <font>
                                <Font name="Arial Black" size="13.0" />
                            </font>
                        </TextField>

                        <Label text="Image:" GridPane.columnIndex="2" GridPane.rowIndex="0">
                            <font>
                                <Font name="Arial Black" size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtImage" promptText="Image" style="-fx-background-radius: 50;"
                                   GridPane.columnIndex="3" GridPane.rowIndex="0">
                            <font>
                                <Font name="Arial Black" size="13.0" />
                            </font>
                        </TextField>

                        <!-- Segunda fila -->
                        <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <font>
                                <Font name="Arial Black" size="15.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtCategory" promptText="Category" style="-fx-background-radius: 50;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <font>
                                <Font name="Arial Black" size="13.0" />
                            </font>
                        </TextField>

                        <Label text="Price:" GridPane.columnIndex="2" GridPane.rowIndex="1">
                            <font>
                                <Font name="Arial Black" size="15.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtPrice" promptText="Price" style="-fx-background-radius: 50;"
                                   GridPane.columnIndex="3" GridPane.rowIndex="1">
                            <font>
                                <Font name="Arial Black" size="13.0" />
                            </font>
                        </TextField>
                    </GridPane>

                    <!-- Estado y Fecha -->
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <VBox>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Estatus">
                                <font>
                                    <Font name="Bilya Layered Base" size="18.0" />
                                </font>
                            </Text>
                            <HBox spacing="10">
                                <RadioButton fx:id="rdBtnPublished" text="Published">
                                    <font>
                                        <Font name="Arial Black" size="12.0" />
                                    </font>
                                </RadioButton>
                                <RadioButton fx:id="rdBtnSold" text="Sold">
                                    <font>
                                        <Font name="Arial Black" size="12.0" />
                                    </font>
                                </RadioButton>
                                <RadioButton fx:id="rdBtnCancelled" text="Cancelled">
                                    <font>
                                        <Font name="Arial Black" size="12.0" />
                                    </font>
                                </RadioButton>
                            </HBox>
                        </VBox>
                        <DatePicker fx:id="dpPublicationDate" promptText="Publication Date"
                                    stylesheets="@Css/DatePicker.css" />
                    </HBox>

                    <Separator />

                    <!-- Botones -->
                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="btnClearFields" onAction="#onClearFields" style="-fx-background-radius: 50;"
                                text="Clear Fields" prefWidth="140.0">
                            <textFill>
                                <RadialGradient centerX="0.5115606936416185" centerY="0.41133004926108374"
                                                radius="0.6772151898734178">
                                    <stops>
                                        <Stop color="#99148e" />
                                        <Stop color="#240722" offset="1.0" />
                                    </stops>
                                </RadialGradient>
                            </textFill>
                            <font>
                                <Font name="Arial Black" size="12.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnAddProduct" onAction="#onAddProduct" style="-fx-background-radius: 50;"
                                text="Add Product" prefWidth="140.0">
                            <textFill>
                                <RadialGradient centerX="0.5115606936416185" centerY="0.41133004926108374"
                                                radius="0.6772151898734178">
                                    <stops>
                                        <Stop color="#99148e" />
                                        <Stop color="#240722" offset="1.0" />
                                    </stops>
                                </RadialGradient>
                            </textFill>
                            <font>
                                <Font name="Arial Black" size="12.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnRemoveProduct" onAction="#onRemoveProduct" style="-fx-background-radius: 50;"
                                text="Remove Product" prefWidth="140.0">
                            <textFill>
                                <RadialGradient centerX="0.5115606936416185" centerY="0.41133004926108374"
                                                radius="0.6772151898734178">
                                    <stops>
                                        <Stop color="#99148e" />
                                        <Stop color="#240722" offset="1.0" />
                                    </stops>
                                </RadialGradient>
                            </textFill>
                            <font>
                                <Font name="Arial Black" size="12.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnUpdateProduct" onAction="#onUpdateProduct" style="-fx-background-radius: 50;"
                                text="Update Product" prefWidth="140.0">
                            <textFill>
                                <RadialGradient centerX="0.5115606936416185" centerY="0.41133004926108374"
                                                radius="0.6772151898734178">
                                    <stops>
                                        <Stop color="#99148e" />
                                        <Stop color="#240722" offset="1.0" />
                                    </stops>
                                </RadialGradient>
                            </textFill>
                            <font>
                                <Font name="Arial Black" size="12.0" />
                            </font>
                        </Button>
                    </HBox>
                </VBox>
            </AnchorPane>

            <!-- Panel Inferior -->
            <AnchorPane>
                <HBox spacing="10" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                      AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <TableView fx:id="tbProducts" HBox.hgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="tcName" text="Name" />
                            <TableColumn fx:id="tcCategory" text="Category" />
                            <TableColumn fx:id="tcPrice" text="Price" />
                            <TableColumn fx:id="tcStatus" text="Status" />
                            <TableColumn fx:id="tcPublicationDate" text="Publication Date" />
                            <TableColumn fx:id="tcImagePath" text="Image" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                    <ImageView fx:id="imgProduct" fitHeight="202.0" fitWidth="163.0" preserveRatio="true">
                        <image>
                            <Image url="@images/DunimaSinFondo.png" />
                        </image>
                    </ImageView>
                </HBox>
            </AnchorPane>
        </items>
    </SplitPane>
</AnchorPane>